<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
</head>
<%- include('./partials/home-style') %>
<style>
    .topnav {
      overflow: hidden;
      background-color: #B08B71;
    }
    
    .topnav a {
      float: left;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 17px;
    }
</style>

<body>
<%- include('partials/navbar') %>
    <div style="display: flex; justify-content:center">
        <h1>MEME</h1>
    </div>
    <div style="display: flex; justify-content:center">
        <form action="/" method="get">
            <button>All</button>
        </form>
        <% tag.forEach(el=> { %>
            <form action="/" method="get">
                <button name="filter" value="<%= el.name %>">
                    <%= el.name %>
                </button>
            </form>
            <% }) %>
    </div><br>
    <div class ="search">
        <form action="/" method="get">
            <input type="text" name="search">
            <button type="submit" class="btn3">Search</button>
        </form>
    </div>
    <% meme.forEach(el=> { %>
        <div class = "row">
            <div class = "card">
            <% profile.forEach(element => { %>
                <% if (el.UserId === element.UserId) { %>
                    <p><%= element.getFullName(element.UserId) %></p>
                <% } %>
            <% }) %>
                <h3>
                    <%= el.title %>
                </h3>
                <div style="display: flex; justify-content:center;">
                    <img src="../uploads/<%= el.imageURL %>" alt="image of meme">
                </div>
                <div style="margin-top: 30px;">
                    <span>
                        <%= el.Tag.name %>
                    </span> |
                    <% if (!el.Users.length) { %>
                        <span><a href="meme/<%= el.id %>">Comment</a></span>
                    <% } else { %>
                        <% for (const key in memeDetail) {%>
                            <% if (+key === el.id) { %>
                                <span>
                                    <%= memeDetail[key] %> <a href="/meme/<%= +key %>">Comments</a>
                                </span>
                            <% } %>
                        <% }%>
                    <% } %>
                    |
                    <span>
                        <a href="/meme/<%= el.id %>/delete"><button class="btn2">Delete</button></a>
                    </span>
                </div>
            </div>
        </div>
    <% }) %>
</body>

</html>
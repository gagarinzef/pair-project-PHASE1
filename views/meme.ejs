<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    p.ex3 {
        width: 200px;
        height: 70px;
        overflow: auto;
    }

    div.ex3 {
        width: 100%;
        height: 300px;
        overflow: auto;
    }
    .card{
        width: 400px;
    }
</style>
<body>
    <div>
        <nav>
            <a href="/">8gag</a> |
            <a href="/meme/add">Add Meme</a>
            <div style="float: right;">
                <a href="">Username</a>
                <a href="">Your Meme</a>
                <a href="">Sign Out</a>
            </div>
        </nav>
    </div>
    <div style="display: flex; justify-content:center">
        <h1><%= meme.title %></h1>
    </div>
    <div style="display: flex; justify-content:center;">
        <div class="card">
            <p><a href="/">Back</a></p>
            <div style="display: flex; justify-content:center;">
                <img src="<%=meme.imageURL %>" alt="image of meme">
            </div>
            <p><%= detail[0].name %></p>
            <div class="ex3">
            <% detail.forEach(x => { %>
                <% meme.Users.forEach(y => { %>
                    <% if (x.UserId === y.id) { %>
                    <p style="margin-bottom: 0px;"><%= y.userName %>:</p>
                    <% } %>
                <% }) %>
                    <p  class= "ex3" style="border: solid 1px black; border-radius: 5px; padding: 10px; padding-left: 5px; margin: 0px;"><%= x.comment %></p>
                    <p style="margin-top: 0px;"><%=timeSince(x.createdAt)%></p>
            <% }) %>
            </div>
            <form action="/meme/<%=meme.id %>" method="post">
                <div>
                    <textarea name="comment" id="" cols="53" rows="2" placeholder="Your Comment..."></textarea>
                </div>
                <button type="submit">Post Comment</button>
            </form>
        </div>
    </div>
</body>
</html>
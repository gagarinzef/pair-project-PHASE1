<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    p.ex3 {
        width: 200px;
        height: 70px;
        overflow: auto;
    }

    div.ex3 {
        width: 100%;
        height: 300px;
        overflow: auto;
    }
    .card{
        width: 400px;
    }
</style>
<body>
        <%- include('partials/navbar') %>
    <div style="display: flex; justify-content:center">
        <h1><%= meme.title %></h1>
    </div>
    <div style="display: flex; justify-content:center;">
        <div class="card">
            <p><a href="/">Back</a></p>
            <div style="display: flex; justify-content:center;">
                <img src="../uploads/<%=meme.imageURL %>" alt="image of meme">
            </div><br>
            <% if (query) { %>
                <% detail.forEach(el => { %>
                    <% if (query === +el.id) { %>
                        <form action="/meme/<%=meme.id %>/edit/<%= el.id%>" method="post">
                            <div>
                                <textarea name="comment" id="" cols="53" rows="2"><%= el.comment %></textarea>
                            </div>
                            <button type="submit">Post Comment</button>
                        </form>
                    <% } %>
                <% }) %>
            <% } else { %>
                <form action="/meme/<%=meme.id %>" method="post">
                    <div>
                        <textarea name="comment" id="" cols="53" rows="2" placeholder="Your comment here..."></textarea>
                    </div>
                    <button type="submit">Post Comment</button>
                </form>
            <% } %>
            <% if (detail) { %>
                <div class="ex3">
                <% detail.forEach(x => { %>
                    <% meme.Users.forEach(y => { %>
                        <% if (x.UserId === y.id) { %>
                        <p style="margin-bottom: 0px;"><%= y.userName %>:</p>
                        <% } %>
                    <% }) %>
                        <p  class= "ex3" style="border: solid 1px black; border-radius: 5px; padding: 10px; padding-left: 5px; margin: 0px;"><%= x.comment %></p>
                        <p style="margin-top: 0px;"><%=timeSince(x.createdAt)%></p>
                        <% if (x.UserId === user.id) { %>
                            <div style="display: flex;">
                                <form action="/meme/<%= meme.id %>">
                                    <button name="edit" value="<%= x.id %>">Edit</button>
                                </form>
                                <a href="/meme/<%= meme.id %>/delete/<%= x.id %>"><button>Delete</button></a>
                            </div>
                        <% } %>
                <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
  <title>Document</title>
</head>
<style>
  .topnav {
    overflow: hidden;
    background-color: #B08B71;
  }
  
  .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }
</style>
<style>
    .btn3 {
      border: 2px solid rgb(38, 184, 111);
      border-radius: 2px;
      background-color: rgb(38, 184, 111);
      color: white;
      margin-left: 5px;
    }
</style>
<%- include('./partials/form-style') %>
<body>
  <%- include('partials/navbar') %>
  <div style="display: flex; justify-content:center; margin-top: 50px; margin-bottom: 20px;">
    <h1>Add Tag</h1>
  </div>
  <div style="display: flex; justify-content:center">
    <% if(success) { %>
      <p style="color:green">
        <%='New Tag created!'%>
      </p>
    <% } else if (errors) { %>
      <%errors.split(',').map(el=>{%>
        <p style="color:red; margin-right: 5px">
          <%=el%>
        </p>
        <%})%>
    <% } %>
  </div>
  <div class="form">
      <form action="/tag/add" method="POST">
        <div>
          <label for="tag">Tag Name</label><br>
          <input type="text" name="tag" id="tag">
          <button class="btn3" type="submit">Add Tag</button>
        </div>
      </form>
  </div>

</body>
</html>